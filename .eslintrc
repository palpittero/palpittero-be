{
  "root": true,
  "env": {
    "node": true,
    "commonjs": true,
    "browser": true,
    "es6": true,
    "jest": true,
  },
  "extends": [ "eslint:recommended", "prettier" ],
  "plugins": [ "prettier" ],
  "parser": "@babel/eslint-parser",
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none"
      }
    ]
  }
}
